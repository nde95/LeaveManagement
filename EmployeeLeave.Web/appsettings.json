{
    "ConnectionStrings": {
        "DefaultConnection": "Server=employeeleave-webdbserver.database.windows.net;Database=EmployeeLeave.Web_db;Trusted_Connection=True;MultipleActiveResultSets=true;Encrypt=False"
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.LifeTime": "Information"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/log-.txt",
                    "rollingInterval": "Day"
                }
            },
            {
                "Name": "Seq",
                "Args":  { "serverUrl":  "http://localhost:5341" }
            }
        ]
    },
  "AllowedHosts": "*"
}
